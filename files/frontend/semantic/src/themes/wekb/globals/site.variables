/*******************************
         Site Settings
*******************************/


/*-------------------
       Fonts
--------------------*/




@importGoogleFonts : false;
/* -------------------
	  Base Sizes
-------------------- */


/* The size of page text */
@fontSize: 1rem;

/*-------------------
       Links
--------------------*/



@linkHoverUnderline  : underline;
@linkColor: #00509f;
@linkHoverColor: if(iscolor(@linkColor), darken(saturate(@linkColor, 20), 15, relative), @linkColor);


